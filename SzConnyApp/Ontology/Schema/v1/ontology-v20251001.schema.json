{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "EMS Ontology Definition",
  "description": "A meta schema, which defines the rules to define a higher order schema",
  "version": "1.0.1",
  "createdDate": "2025-09-30T04:00:00+10:00",
  "lastModified": "2025-10-08T08:17:15+10:00",

  "definitions": {
    "Manifest": {
      "type": "object",
      "properties": {
        "version": { "type": "string" },
        "createdDate": { "type": "string", "format": "date-time" },
        "lastModified": { "type": "string", "format": "date-time" },
        "description": { "type": "string" },
        "changes": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "version": { "type": "string" },
              "date": { "type": "string", "format": "date-time" },
              "description": { "type": "string" }
            },
            "required": ["version", "date", "description"]
          }
        }
      },
      "required": ["version", "createdDate", "description"]
    },

    "RecordTypeEnum": {
      "title": "Entity Type Enumeration",
      "type": "string",
      "enum": [
        "Person",
        "Passport",
        "Organisation",
        "Vehicle",
        "Document",
        "Weapon"
      ],
      "default": "Person"
    },

    "ValidationRule": {
      "type": "object",
      "oneOf": [
        {
          "properties": {
            "type": { "const": "regex" },
            "pattern": { "type": "string" },
            "errorMessage": { "type": "string" }
          },
          "required": ["type", "pattern"]
        },
        {
          "properties": {
            "type": { "const": "length" },
            "minLength": { "type": "integer" },
            "maxLength": { "type": "integer" },
            "errorMessage": { "type": "string" }
          },
          "required": ["type"],
          "anyOf": [
            { "required": ["minLength"] },
            { "required": ["maxLength"] }
          ]
        }
      ]
    },

    "AttributeType": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" },
        "isMandatory": { "type": "boolean" },
        "cardinality": {
          "type": "object",
          "properties": {
            "min": { "type": "integer", "minimum": 0 },
            "max": { "type": ["integer", "null"], "maximum": 99999 }
          }
        },
        "validationRules": {
          "type": "array",
          "items": { "$ref": "#/definitions/ValidationRule" }
        },
        "enum": {
          "type": "array",
          "items": { "type": "string" }
        },
        "dataType": {
          "type": "string",
          "enum": ["string", "integer", "boolean", "date", "datetime"]
        },
        "attributes": {
          "type": "array",
          "description": "Used for composite types, containing nested AttributeType definitions.",
          "items": {
            "anyOf": [
              { "$ref": "#/definitions/AttributeType" },
              {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "$ref": {
                    "type": "string",
                    "description": "Reference to a named attribute in the top-level 'attributeTypes' map."
                  }
                },
                "required": ["name", "$ref"]
              }
            ]
          }
        }
      },
      "oneOf": [
        {
          "description": "Simple Attribute: Requires dataType, must NOT have attributes",
          "required": ["dataType"],
          "not": { "required": ["attributes"] }
        },
        {
          "description": "Composite Attribute: Requires attributes, must NOT have dataType",
          "required": ["attributes"],
          "not": { "required": ["dataType"] }
        }
      ]
    },

    "RecordAttributeReference": {
      "type": "object",
      "description": "An attribute defined within a RecordType, which may reference a shared definition.",
      "properties": {
        "name": {
          "type": "string",
          "description": "The attribute's name within this RecordType."
        },
        "description": { "type": "string" },
        "isMandatory": { "type": "boolean" },
        "cardinality": {
          "$ref": "#/definitions/AttributeType/properties/cardinality"
        },
        "enum": { "$ref": "#/definitions/AttributeType/properties/enum" },
        "validationRules": {
          "$ref": "#/definitions/AttributeType/properties/validationRules"
        },
        "$ref": {
          "type": "string",
          "description": "Stable pointer to a definition in the top-level 'attributeTypes' map."
        }
      },
      "required": ["name"],
      "oneOf": [
        { "required": ["$ref"] },
        { "required": ["dataType"], "not": { "required": ["$ref"] } }
      ]
    },

    "BaseRecord": {
      "type": "object",
      "description": "Enforces mandatory Metadata composite attribute for all inheriting RecordTypes.",
      "properties": {
        "attributes": {
          "type": "array",
          "minItems": 1,
          "contains": {
            "properties": {
              "name": { "const": "Metadata" },
              "$ref": { "const": "#/attributeTypes/MetadataComposite" }
            },
            "required": ["name", "$ref"]
          }
        }
      },
      "required": ["attributes"]
    },

    "RecordType": {
      "allOf": [{ "$ref": "#/definitions/BaseRecord" }],
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "description": { "type": "string" },
        "attributes": {
          "type": "array",
          "items": {
            "anyOf": [
              { "$ref": "#/definitions/RecordAttributeReference" },
              { "$ref": "#/definitions/AttributeType" }
            ]
          },
          "description": "Attributes for this record. Can be an inline AttributeType or a RecordAttributeReference."
        },
        "relationships": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "targetType": { "$ref": "#/definitions/RecordTypeEnum" },
              "relationshipType": { "type": "string" }
            },
            "required": ["targetType", "relationshipType"]
          }
        }
      },
      "required": ["name", "attributes"]
    },

    "LinkType": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "sourceTypes": {
          "type": "array",
          "items": { "type": "string" }
        },
        "targetTypes": {
          "type": "array",
          "items": { "type": "string" }
        },
        "bidirectional": { "type": "boolean" },
        "inverseName": { "type": ["string", "null"] },
        "description": { "type": "string" }
      },
      "required": ["name", "sourceTypes", "targetTypes"]
    }
  },

  "type": "object",

  "properties": {
    "manifest": { "$ref": "#/definitions/Manifest" },

    "attributeTypes": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/AttributeType"
      },
      "description": "Reusable AttributeType definitions, keyed by their unique name (e.g., FullName, AddressComposite).",
      "minProperties": 1
    },

    "recordTypes": {
      "type": "array",
      "items": { "$ref": "#/definitions/RecordType" }
    },

    "linkTypes": {
      "type": "array",
      "items": { "$ref": "#/definitions/LinkType" }
    }
  },
  "required": ["manifest", "attributeTypes", "recordTypes"]
}
